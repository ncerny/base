[api]
  dashboard = true
  insecure = true
[entryPoints]
  [entryPoints.http]
    address = ":80"
  [entryPoints.https]
    address = ":443"




[http.routers]
  [http.routers.kubernetes]
    entryPoints = ["https"]
    rule = "Host(`kubernetes.management`)"
    service = "kubernetes"
    [http.routers.kubernetes.tls]
      passthrough = "true"
[http.services]
  [http.services.kubernetes.loadBalancer]
    [[http.services.kubernetes.loadBalancer.servers]]
      url = "https://virt01.home:6443"
    [[http.services.kubernetes.loadBalancer.servers]]
      url = "https://virt02.home:6443"
    [[http.services.kubernetes.loadBalancer.servers]]
      url = "https://virt03.home:6443"
[tls.stores]
  [tls.stores.default]



[entryPoints.http.redirect]
      entryPoint = "https"